<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0" Color="Blue"></GradientStop>
                <GradientStop Offset="0.5" Color="LightBlue"></GradientStop>
            </LinearGradientBrush>
            
        </Grid.Background>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="12,20,0,0" Name="textBox1" VerticalAlignment="Top" Width="276" Text="{Binding ElementName=slider1,Path=Value,UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="WPF" Height="23" HorizontalAlignment="Left" Margin="317,20,0,0" Name="button1" VerticalAlignment="Top" Width="75"/>
        <Slider Height="17" HorizontalAlignment="Left" Margin="10,40,10,0" Name="slider1" VerticalAlignment="Top" Width="276" Maximum="100" />
    </Grid>
</Window>
